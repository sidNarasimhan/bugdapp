{
  "name": "web3-test-platform",
  "version": "2.0.0",
  "private": true,
  "description": "Web3 dApp Testing Platform - Record, generate, and run tests with real wallet interactions",
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --filter @web3-test/* run build",
    "test": "pnpm --filter @web3-test/* run test",
    "clean": "pnpm --filter @web3-test/* run clean",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "web3",
    "dapp",
    "testing",
    "playwright",
    "synpress",
    "metamask"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
