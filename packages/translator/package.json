{
  "name": "@web3-test/translator",
  "version": "1.0.0",
  "description": "CLI tool to translate JSON recordings to Playwright/Synpress specs for Web3 dApps",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dapp-test-translator": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "generate": "node dist/cli.js generate",
    "validate": "node dist/cli.js validate",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "playwright",
    "synpress",
    "web3",
    "dapp",
    "testing",
    "metamask",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "handlebars": "^4.7.8",
    "inquirer": "^10.2.2",
    "ora": "^8.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
