# Server Configuration
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info
CORS_ORIGIN=*

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/web3test?schema=public"

# Redis (for BullMQ)
REDIS_URL="redis://localhost:6379"

# Anthropic API (for test generation)
ANTHROPIC_API_KEY="sk-ant-api..."

# Storage (for artifacts)
STORAGE_TYPE=local
STORAGE_PATH=./artifacts
